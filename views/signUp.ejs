<html lang="en">
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="/stylesheets/style.css" />
    <head>
      <link
        href="./node_modules/font-awesome/css/font-awesome.css"
        rel="stylesheet"
        type="text/css"
      />
    </head>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
      integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T"
      crossorigin="anonymous"
    />
    <script
      src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
      integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
      integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
      integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
      crossorigin="anonymous"
    ></script>

    <script>
      $("myCarousel").carousel({
        interval: 2000,
      });
    </script>

    <%-include('template/header.ejs')%>
    <title><%= title %></title>
  </head>
  <body>
    <div id="logSignDiv" class="container" style="margin-top: 10%">
      <div class="row">
        <div class="col-lg-4 col-md-4 col-sm-3 col-3"/></div>

        <!-- Sign up options div -->
        <div class="card col-lg-4" id="signUpOptionsDiv" width: 18rem">
          <div class="row m-4" style="margin: 2%">
            <img
              style="border-radius: 20%"
              src="/images/logo.png"
              alt="..."
              width="8%"
              height="80%"
            />
            <h4 class="headingh4">TaskAssigner</h4>
          </div>
          <div class="card-body" class="buttonHover">
            <h5 class="card-title black">Sign Up</h5>
          </div>
          <ul class="list-group list-group-flush">
            <button
              id="continueWithEmail"
              class="buttonHover"
              style="padding: 2%; margin-top: 5%; margin-bottom: 5%"
              onclick=""
            >
              <img
                src="/images/email.png"
                width="7%"
                height="90%"
                alt=".."
                style="margin-right: 3%;"
              /><a href="#" style="color: black">Email</a>
            </button>
            <button
              id="continueWithGoogle"
              class="buttonHover"
              style="padding: 2%; margin-top: 5%; margin-bottom: 5%"
              onclick=""
            >
              <img
                src="/images/google.png"
                width="7%"
                height="90%"
                alt=".."
                style="margin-right: 3%"
              /><a href="#" style="color: black">Continue with Google</a>
            </button>
            <button
              id="continueWithFacebook"
              class="buttonHover"
              style="padding: 2%; padding: 2%; margin-bottom: 5%"
            >
              <img
                src="/images/fb.png"
                width="7%"
                height="90%"
                alt=".."
                style="margin-right: 3%"
              />Continue with facebook
            </button>
            <div class="m-2 p-2">
              <a class="mb-2 mr-2" style="right: 0%;bottom: 0%; position: absolute;" href="/login">Already have an account,Login</a>
            </div>
            </ul>
        </div>

        <!-- SignUp DIV -->

        <div  class="container" id="signUpDiv">
          <div class="row" >
            <div class="col-lg-4 col-md-4 col-sm-3 col-3"/>
            <button id="back">back</button>
          </div>
            <div class="card col-lg-4 col-md-4 col-sm-3 col-3">
              <div class="row m-4" style="margin: 2%">
                <img
                  style="border-radius: 20%"
                  src="/images/logo.png"
                  alt="..."
                  width="8%"
                  height="80%"
                />
                <h4 class="headingh4">TaskAssigner</h4>
              </div>
                <form action="signUpWithEmail" method="POST" onsubmit="return submitForm()">
                  <div class="form-group">
                    <label>Name</label>
                  </br>
                    <input
                    type="text"
                    id="userName"
                    name="userName"
                    placeholder="Name"
                    required
                    class="form-control"
                  />
                  </div>
                    
                       
                  <div class="form-group">
                    <label>Email</label>
                  </br>

                  <input
                    type="number"
                    id="userPhone"
                    name="userPhone"
                    placeholder="Phone"
                    required
                    class="form-control"
                  />
                  </div>

                  <div class="form-group">
                    <label>Email</label>
                  </br>

                  <input
                    type="email"
                    id="userEmail"
                    name="userEmail"
                    placeholder="Email"
                    required
                    class="form-control"
                  />
                  </div>
                  <div class="form-group">
                    <label>Paasword</label>
                  </br>

                    <input
                    type="password"
                    id="userPassword"
                    name="userPassword"
                    placeholder="Password"
                    required
                    class="form-control"
                  />
                  </div>

                  <div class="form-group">
                    <label>Confirm Password</label>
                  </br>

                    <input
                    type="password"
                    id="userConfirmPassword"
                    name="userConfirmPassword"
                    placeholder="Confirm password"
                    required
                    class="form-control"
                  />
                  </div>
                 <input class="btn btn-danger mb-4"type="submit"/>
                </form>
                </div>
            </div>
            </div>
        </div>
      
      </div>
    </div>
  </body>
</html>

<script>
  $("document").ready(function () {
    $('#signUpDiv').toggle()

    $('#continueWithEmail').click(function(){
      $('#signUpOptionsDiv').toggle()
      $('#signUpDiv').toggle()
    })
    $('#back').click(function(){
      window.location.replace('/signUp')
    })
    
    $('#continueWithGoogle').click(function(){
       $('#')
    })
});

function submitForm()
{
  var phoneno = /^\d{10}$/;
  if($('#userPhone').val().match(phoneno) && 
      $('#userPassword').val()==$('#userConfirmPassword').val()){
        alert('TRUE')
      return true;
    }
    else {
      alert('FALSE')
      return false;}
}
</script>
